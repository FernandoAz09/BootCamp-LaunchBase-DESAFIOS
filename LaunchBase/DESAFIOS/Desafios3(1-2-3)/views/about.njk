{% extends "layout.njk" %}  <!-- QUANDO CHEGAR NESSA PÃGINA TENHO QUE IR PARA A PAGINA LAYOUT-->

{% block head %}

    <title>Sobre - {{ about.name }}</title>
    
{% endblock %}

{% block content %}

<div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>{{ about.description }}</p>
</div>

<div id="footer" class="Links">
    {% for link in about.links %}
        <a href="{{ link.url }}" target="_blanc">{{ link.name }}</a>
    {% endfor %}
</div>

{% endblock %}